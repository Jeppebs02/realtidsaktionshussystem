@page
@model AuctionHouse.WebSite.Pages.Auction.Active.IndexModel
@{
}

@{
    ViewData["Title"] = "Active Auction";
}

html>

<head>
    <h1>Active Auctions</h1>
    <br />

    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1rem;">
        @foreach (var auction in Model.ActiveAuctions)
        {
            <div style="border: 1px solid #ccc; padding: 1rem; border-radius: 8px;">
                <a asp-page="/Auction/Details" asp-route-id="@auction.Id" style="text-decoration: none; color: inherit;">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(auction.ImageData)" alt="Auction Image" style="max-width: 100%; height: auto; border-radius: 4px;" />
                    <h2>@auction.Title</h2>
                    <p><strong>Current bid:</strong> @auction.CurrentBid.ToString("C")</p>
                </a>
            </div>
        }
    </div>

</head>


